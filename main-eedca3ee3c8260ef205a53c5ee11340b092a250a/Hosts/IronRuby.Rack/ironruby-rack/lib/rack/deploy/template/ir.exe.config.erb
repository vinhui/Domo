
<!--
  DLR configuration: mainly sets IronRuby's library paths, 
  tweak as necessary based on your setup.
-->
<configSections>
  <section name='microsoft.scripting' requirePermission='false' type='Microsoft.Scripting.Hosting.Configuration.Section, Microsoft.Scripting, Version=1.1.0.20, Culture=neutral, PublicKeyToken=<%= config.public_key_token %>'/>
</configSections>

<microsoft.scripting debugMode="<%= config.dlr_debug %>">
  <languages>
    <language extensions='.rb' displayName='IronRuby' type='IronRuby.Runtime.RubyContext, IronRuby, Version=<%= config.ironruby_version %>, Culture=neutral, PublicKeyToken=<%= config.public_key_token %>' names='IronRuby;Ruby;rb'/>
  </languages>
  <options>
    <set language="Ruby" option="LibraryPaths" value="<%= config.library_path %>"/>
  </options>
</microsoft.scripting>
